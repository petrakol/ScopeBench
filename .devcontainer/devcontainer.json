{
  "name": "ScopeBench Dev",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "postCreateCommand": "pip install -U pip && pip install -e '.[dev]'",
  "customizations": {
    "vscode": {
      "settings": {
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": [
          "tests"
        ],
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff"
      ]
    }
  }
}
